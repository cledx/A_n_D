<div class="d-flex container align-items-center justify-content-between">
  <div>
    <div class="d-flex justify-content-between">
      <h1>Stories</h1>
      <p><%= link_to 'New Story', new_character_path %>
    </div>
    <div>
      <ul>
        <% @stories.each do |story| %>
          <% if story.messages.any? %>
            <% last_message = story.messages.last %>
            <li><%= link_to story.title, message_path(last_message) %></li>
          <% else %>
            <li><%= story.title %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div>
    <div class="d-flex justify-content-between">
      <h2>My Characters</h2>
      <p> <%= link_to 'New Character', new_character_path %></p>
    </div>
    <ul>
      <% @characters.each do |character| %>
        <li><%= link_to character.name, character_path(character) %></li>
      <% end %>
    </ul>
  </div>
</div>
